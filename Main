def divisor(num)

divisible = 

divisible_1000_less = 

i = 1

while i <= num

divisible_or = num % i

if divisible_or == 0

puts i

divisible << i

if i <= 1000

divisible_1000_less << i

end

end

i += 1

end

puts "約数の総和は#{divisible.sum}です"

puts "1000以下の約数の和は#{divisible_1000_less.sum}です"

end



puts "整数を入力してください"

num = gets.to_i

divisor(num)